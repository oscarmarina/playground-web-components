{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["**/*.js", "**/*.d.ts"]
}
